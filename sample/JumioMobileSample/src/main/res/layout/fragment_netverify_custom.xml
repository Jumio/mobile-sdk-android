<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jumio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/netverifySettingsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startNetverifyCustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tvOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="@string/header_options"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/switchVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="@string/netverify_verification_enabled"
            android:checked="true"/>

        <Switch
            android:id="@+id/switchIdentitiyVerification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/netverify_identity_verification_enabled"
            android:gravity="center_horizontal"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/netverifySettingsContainer"
        android:importantForAccessibility="no"
        android:visibility="visible">
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/netverifySettingsContainer"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/netverifyCustomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/stopNetverifyCustomButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_ui_stop_scan"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/countryDocumentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/customCountrySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Spinner>

                <Spinner
                    android:id="@+id/customDocumentSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Spinner>

                <Spinner
                    android:id="@+id/customVariantSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Spinner>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/setCountryAndDocumentType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Country and DocType"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/partTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/frontSideButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frontside"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backSideButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Backside"
                    android:visibility="gone"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/faceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Face"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/userConsentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:id="@+id/userConsentUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/userConsentedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Consented"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/customScanLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Stop"/>

                <TextView
                    android:id="@+id/extractionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:text="Extraction"/>

                <Switch
                    android:id="@+id/extraction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/extractionLabel"
                    android:checked="true"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startFallback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Fallback"/>

                <FrameLayout
                    android:id="@+id/inlineScanViewWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stopScan">

                    <com.jumio.nv.custom.NetverifyCustomScanView
                        android:id="@+id/netverifyCustomScanView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        jumio:jumio_ratio="1.33">
                    </com.jumio.nv.custom.NetverifyCustomScanView>
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/switchCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/inlineScanViewWrapper"
                    android:text="Camera"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/takePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inlineScanViewWrapper"
                    android:layout_centerHorizontal="true"
                    android:text="Take"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/toggleFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/inlineScanViewWrapper"
                    android:text="Flash"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/customConfirmLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <com.jumio.nv.custom.NetverifyCustomConfirmationView
                    android:id="@+id/netverifyCustomConfirmationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.jumio.nv.custom.NetverifyCustomConfirmationView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retryScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/netverifyCustomConfirmationView"
                    android:layout_below="@+id/netverifyCustomConfirmationView"
                    android:text="Retry"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/netverifyCustomConfirmationView"
                    android:layout_below="@+id/netverifyCustomConfirmationView"
                    android:text="Confirm"/>
            </RelativeLayout>

            <com.jumio.nv.custom.NetverifyCustomAnimationView
                android:id="@+id/netverifyCustomAnimationView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone">
            </com.jumio.nv.custom.NetverifyCustomAnimationView>
            <RelativeLayout
                android:id="@+id/customNfcLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:id="@+id/customNfcAccessLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/idNumberInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="ID Number"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dateOfBirthInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dateOfBirthEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:hint="Date of birth"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/dateOfExpiryInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/dateOfExpiryEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:hint="Date of expiry"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nfcRetryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/customNfcAccessLayout"
                    android:visibility="invisible"
                    android:text="Retry"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nfcCancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/customNfcAccessLayout"
                    android:text="Cancel"/>
            </RelativeLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/errorRetryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/partRetryButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retry"
                android:visibility="gone"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finishButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/callbackLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>